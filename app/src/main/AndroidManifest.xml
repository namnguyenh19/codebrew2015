<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.codebrew.codebrewapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name=".VolunteerHP"
            android:label="@string/title_activity_volunteer_hp" >
        </activity>
        <activity
            android:name=".VolunApply"
            android:label="@string/title_activity_volun_apply" >
        </activity>
        <activity
            android:name=".VolunResult"
            android:label="@string/title_activity_volun_result" >
        </activity>
>
        <activity
            android:name=".PaymentActivity"
            android:label="@string/title_activity_payment" >
        </activity>
        <activity
            android:name=".PaymentSuccessActivity"
            android:label="@string/title_activity_payment_success" >
        </activity>
        <activity
            android:name=".DonateItemActivity"
            android:label="@string/title_activity_donate_item" >
        </activity>
    </application>

</manifest>
